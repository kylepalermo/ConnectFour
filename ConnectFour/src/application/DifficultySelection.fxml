<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="selectionPane" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DifficultySelectionController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Please select a difficulty." textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="randomButton" mnemonicParsing="false" prefWidth="100.0" text="Random">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="easyButton" mnemonicParsing="false" prefWidth="100.0" text="Easy">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="hardButton" mnemonicParsing="false" prefWidth="100.0" text="Hard">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
